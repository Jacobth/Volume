<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chalmers.jacobthapps.volume.SaveViewActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:layout_alignParentLeft="true"
        android:id="@+id/volumeResultTitleSave"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/volumeResultSave"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="0 m^3"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/volumeResultTitleSave"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF909090"
        android:layout_below="@id/volumeResultSave" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area"
        android:layout_below="@id/volumeResultSave"
        android:id="@+id/areaResultTitleSave"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="20dp"/>

    <TextView android:id="@+id/areaResultSave"
        android:layout_width="match_parent"
        android:layout_below="@id/areaResultTitleSave"
        android:layout_height="wrap_content"
        android:text="0 m^2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF909090"
        android:layout_below="@id/areaResultSave" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:layout_below="@id/areaResultSave"
        android:id="@+id/weightResultTitleSave"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/weightResultSave"
        android:layout_width="match_parent"
        android:layout_below="@id/weightResultTitleSave"
        android:layout_height="wrap_content"
        android:text="0 kg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF909090"
        android:layout_below="@id/weightResultSave"
        android:paddingTop="16dp"/>

</RelativeLayout>
